<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="prachi14075.iiitd.ac.in.myapplication.HomeActivity">

    <Button
        android:id="@+id/evnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="19dp"
        android:layout_marginStart="21dp"
        android:text="event"/>

    <Button
        android:id="@+id/evnt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/evnt"
        android:layout_centerHorizontal="true"
        android:text="EVENT2" />

    <Button
        android:id="@+id/evnt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/evnt2"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:text="Event3" />

    <Button
        android:id="@+id/evnt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/evnt2"
        android:layout_alignEnd="@+id/evnt2"
        android:layout_marginBottom="64dp"
        android:text="event 4 Fixed for level 2(final)" />


    <Button
        android:id="@+id/edp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="event detail"
        android:layout_below="@+id/textView2"
        android:layout_toEndOf="@+id/evnt"
        android:layout_marginStart="10dp"
        android:layout_marginTop="95dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/evnt"
        android:layout_marginTop="92dp"
        android:text="TextView" />

    <Button
        android:id="@+id/evnt5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event5"
        android:layout_above="@+id/evnt3"
        android:layout_alignStart="@+id/evnt3"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/edp2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/edp"
        android:layout_toStartOf="@+id/edp"
        android:text="Event Detail 2" />

</RelativeLayout>
